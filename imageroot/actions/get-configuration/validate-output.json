{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Get Firebird settings",
    "$id": "http://nethserver.org/json-schema/task/input/firebird/get-configuration",
    "description": "Get Firebird settings",
    "examples": [
        {
            "host": "firebird.domain.org",
            "http2https": true,
            "lets_encrypt": true,
            "tcp_port_firebird": 3050
        }
    ],
    "type": "object",
    "required": [
    "charset",
    "port",
    "tz",
    "host",
        "http2https",
        "lets_encrypt",
        "tcp_port_firebird"
    ],
    "properties": {
        "charset": {
            "type": "string",
            "description": "Charset for the application, like 'UTF8",
            "format": "idn-hostname"
        },
        "port": {
            "type": "string",
            "description": "TCP port for the application, like '3050",
            "format": "idn-hostname"
        },
        "tz": {
            "type": "string",
            "description": "Time zone for the application, like 'Europe/Budapest",
            "format": "idn-hostname"
        },
        "host": {
            "type": "string",
            "description": "Host name for the application, like 'firebird.domain.org'",
            "format": "idn-hostname"
        },
        "lets_encrypt": {
            "type": "boolean",
            "title": "Let's Encrypt certificate",
            "description": "Request a valid Let's Encrypt certificate."
        },
        "http2https": {
            "type": "boolean",
            "title": "HTTP to HTTPS redirection",
            "description": "Redirect all the HTTP requests to HTTPS"
        },
        "tcp_port_firebird": {
            "type": "integer",
            "title": "TCP port",
            "description": "TCP port for the Firebird server",
            "minimum": 20000,
            "maximum": 65535
        }
    }
}
